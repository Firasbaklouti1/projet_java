<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.AutoEcoleController">
    <children>
        <VBox alignment="CENTER" spacing="10" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="50">
            <HBox spacing="10">
                <Label text="Nom de l'auto-école:" />
                <TextField fx:id="nomField" promptText="Entrez le nom" />
            </HBox>
            <HBox spacing="10">
                <Label text="Adresse:" />
                <TextField fx:id="adresseField" promptText="Entrez l'adresse" />
            </HBox>
            <HBox spacing="10">
                <Label text="Numéro de téléphone:" />
                <TextField fx:id="telephoneField" promptText="Entrez le numéro" />
            </HBox>
            <HBox spacing="10">
                <Label text="Email:" />
                <TextField fx:id="emailField" promptText="Entrez l'email" />
            </HBox>
            <Button fx:id="addAutoEcole" text="Ajouter Auto-École" onAction="#ajouterAutoEcole"/>
        </VBox>
    </children>
</AnchorPane>
