<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<GridPane xmlns="http://javafx.com/javafx/17.0.2"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="controller.EditConduiteController"
          hgap="10"
          vgap="10"
          prefWidth="400">

    <Label text="CIN Candidat:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="cinCandidatField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Num Matricule:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="numMatriculeField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Nb Heures:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="nbHeuresField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="3">
        <Button text="Update" onAction="#handleUpdate"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>

</GridPane>