<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Pane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="fxml.CandidatFxml">
    <children>
        <VBox spacing="15" layoutX="30" layoutY="30" style="-fx-background-color: #f4f4f4; -fx-padding: 20; -fx-border-color: #d1d1d1; -fx-border-radius: 8; -fx-background-radius: 8;">
            <children>
                <Label text="Saisie des informations du candidat" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333333;" />

                <HBox spacing="10">
                    <Label text="Nom:" minWidth="120" style="-fx-text-fill: #555555;" />
                    <TextField fx:id="txtNom" promptText="Entrez le nom" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc;" />
                </HBox>

                <HBox spacing="10">
                    <Label text="Prénom:" minWidth="120" style="-fx-text-fill: #555555;" />
                    <TextField fx:id="txtPrenom" promptText="Entrez le prénom" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc;" />
                </HBox>

                <HBox spacing="10">
                    <Label text="Date de naissance:" minWidth="120" style="-fx-text-fill: #555555;" />
                    <DatePicker fx:id="dateNaissance" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc;" />
                </HBox>

                <HBox spacing="10">
                    <Label text="Téléphone:" minWidth="120" style="-fx-text-fill: #555555;" />
                    <TextField fx:id="txtTelephone" promptText="Entrez le numéro de téléphone" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc;" />
                </HBox>

                <HBox spacing="10">
                    <Label text="Adresse:" minWidth="120" style="-fx-text-fill: #555555;" />
                    <TextField fx:id="txtAdresse" promptText="Entrez l'adresse" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc;" />
                </HBox>

                <Button text="Soumettre" fx:id="btnSoumettre" onAction="#handleSoumettre" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-border-radius: 4; -fx-background-radius: 4;" />
            </children>
        </VBox>
    </children>
</Pane>
