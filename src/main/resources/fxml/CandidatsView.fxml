<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" spacing="10" style="-fx-padding: 20;">
    <!-- Title -->
    <Label text="Gestion des Candidats" style="-fx-font-size: 18px; -fx-font-weight: bold;" alignment="CENTER"/>

    <!-- TableView -->
    <TableView fx:id="candidatsTable" VBox.vgrow="ALWAYS">
        <columns>
            <!-- Colonne CIN -->
            <TableColumn fx:id="cinColumn" text="CIN"/>
            <!-- Colonne Nom -->
            <TableColumn fx:id="nomColumn" text="Nom"/>
            <!-- Colonne Prénom -->
            <TableColumn fx:id="prenomColumn" text="Prénom"/>
            <!-- Colonne Date de Naissance -->
            <TableColumn fx:id="dateColumn" text="Date de Naissance"/>
            <!-- Colonne Email -->
            <TableColumn fx:id="emailColumn" text="Email"/>
            <!-- Colonne Téléphone -->
            <TableColumn fx:id="telephoneColumn" text="Téléphone"/>
            <!-- Colonne Type Permis -->
            <TableColumn fx:id="typeColumn" text="Type Permis"/>
            <!-- Colonne Nombre d'Heures -->
            <TableColumn fx:id="nbHeuresColumn" text="Nb Heures"/>
            <!-- Colonne Actions -->
            <TableColumn fx:id="actionsColumn" text="Actions"/>
        </columns>
    </TableView>

    <!-- Add Candidate Button -->
    <Button text="Ajouter un Nouveau Candidat" fx:id="addCandidatButton" style="-fx-font-size: 14px; -fx-padding: 10px;"/>
</VBox>
